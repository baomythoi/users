{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@errors/*": [
        "src/errors/*"
      ],
      "@enums/*": [
        "src/enums/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@interfaces/*": [
        "src/types/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ],
    "types": [],
    "outDir": "acme",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "acme"
  ]
}